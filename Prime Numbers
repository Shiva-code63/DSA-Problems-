class Solution {
  public:
    bool isPrime(int n) {
        int cn= 0;
        if (n==1 || n==0){
            return false;   
        }
        else{
            for (int i=1; i<=n; i++){
                if (n%i==0){
                    cn+=1;
                }
            }
            if (cn==2){
                return true;
            }
            else{
                return false;
            }
        }
    }
};
