// Maximum Product Subarrays
class Solution {
public:
    int maxProduct(vector<int>& nums) {
        int n = nums.size();
        long long suffix = 1;
        long long preffix = 1;
        long long max_product = INT_MIN;
        for (int i=0; i<n; i++){
            if (preffix == 0) preffix = 1;
            if (suffix == 0) suffix = 1;
            preffix *= nums[i];
            suffix *= nums[n-1-i];
            max_product = max(max_product, max(preffix, suffix)); 
        }
        return max_product;
    }
};
