class Solution {
public:
    vector<int> unionArray(vector<int>& nums1, vector<int>& nums2) {
        set<int> s;
        vector<int> union1;
        for (auto it : nums1){
            s.insert(it);                   // inserting all elements of nums1 in set.
        }
        for (auto it: nums2){
            s.insert(it);                  //  inserting all elements of nums2 in set.
        }
        for (auto it: s){
            union1.push_back(it);          // adding all elements of set in union.
        }
        return union1;
    }
};
