bool palindrome_string(int i, string s, int n){
    if (i>=n/2){
        return true; 
    }
    if (s[i]!=s[n-i-1]){
        return false;
    }
    return palindrome_string(i+1, s, n);
}


int main(){
    string s;
    cout<<"Enter a string: ";
    cin>>s;
    cout<<palindrome_string(0, s, s.size());
}
