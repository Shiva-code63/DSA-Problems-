// Count Subarrays with XOR K
class Solution {
  public:
    long subarrayXor(vector<int> &arr, int k) {
        int n = arr.size();
        long cnt = 0;
        int l = 0;
        unordered_map<int,int>mpp;
        for (int i=0; i<n; i++){
            l = l^arr[i];
            if (l == k) cnt++;
            int x = l^k;
            if (mpp.find(x) != mpp.end()){
                cnt += mpp[x];
            }
            mpp[l]++;
        }
        return cnt;
    }
};
